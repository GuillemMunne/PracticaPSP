<UserControl x:Class="PokedexWpf.Controls.EvolutionBubbleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="80" Height="80">
  <Border Background="#FF90CAF9" CornerRadius="40" Padding="8">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
      <TextBlock Text="{Binding Pokemon.Name, RelativeSource={RelativeSource AncestorType=UserControl}}" TextAlignment="Center" FontWeight="Bold" Foreground="#FF1A237E" />
    </StackPanel>
  </Border>
</UserControl>
