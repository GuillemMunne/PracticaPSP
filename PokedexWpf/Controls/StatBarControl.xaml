<UserControl x:Class="PokedexWpf.Controls.StatBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="28">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="Auto" />
    </Grid.ColumnDefinitions>
    <TextBlock Text="{Binding Label, RelativeSource={RelativeSource AncestorType=UserControl}}" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="White" />
    <ProgressBar Grid.Column="1" Height="10" Value="{Binding Value, RelativeSource={RelativeSource AncestorType=UserControl}}" Maximum="255" />
    <TextBlock Grid.Column="2" Text="{Binding Value, RelativeSource={RelativeSource AncestorType=UserControl}}" Margin="8,0,0,0" Foreground="White" />
  </Grid>
</UserControl>
