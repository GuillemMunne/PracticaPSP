<Window x:Class="PokedexWpf.SplashScreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PokeDex" Height="320" Width="520" WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent">
  <Border Background="#FF1B1B1B" CornerRadius="16" Padding="24">
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="*" />
        <RowDefinition Height="Auto" />
      </Grid.RowDefinitions>
      <StackPanel VerticalAlignment="Center">
        <TextBlock Text="POKEDEX" FontSize="36" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" />
        <TextBlock Text="Carregant dades..." FontSize="16" Foreground="#FFBDBDBD" HorizontalAlignment="Center" Margin="0,12,0,0" />
      </StackPanel>
      <ProgressBar Grid.Row="1" Height="10" Margin="0,16,0,0" IsIndeterminate="True" />
    </Grid>
  </Border>
</Window>
